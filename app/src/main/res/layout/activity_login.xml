<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/page_login_ek1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View   android:id="@+id/_bg__login_ek2"
                    android:background="@drawable/_bg__login_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="844dp" />

                <View   android:id="@+id/rectangle_7"
                    android:background="@drawable/rectangle_7_shape"
                    android:layout_width="433dp"
                    android:layout_height="222dp" />

                <TextView android:id="@+id/login_now"
                    android:textSize="30sp"
                    android:textColor="@color/login_now_color"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="98dp"
                    android:layout_width="581.66dp"
                    android:layout_height="130dp"
                    android:text="@string/login_now_string"
                    />

                <TextView android:id="@+id/please_login_to_continue_using_our_app_"
                    android:textSize="14sp"
                    android:textColor="@color/login_now_color"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="151dp"
                    android:layout_width="355.4dp"
                    android:layout_height="65.4dp"
                    android:text="@string/please_login_to_continue_using_our_app__string"
                    />

                <ImageView android:id="@+id/loginBtn"
                    android:src="@drawable/rectangle_4"
                    android:contentDescription="rectangle_4"
                    android:layout_marginStart="41.5dp"
                    android:layout_marginTop="584dp"
                    android:layout_width="308dp"
                    android:layout_height="67dp" />

                <TextView
                    android:id="@+id/login_ek3"
                    android:layout_width="62.8dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="171dp"
                    android:layout_marginTop="603dp"
                    android:text="@string/login_ek3_string"
                    android:textColor="@color/login_now_color"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:id="@+id/group_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"> <!-- Этот атрибут выравнивает контейнер по центру экрана -->

                    <View
                        android:id="@+id/_bg__group_1_ek1"
                        android:background="@drawable/_bg__group_1_ek1_shape"
                        android:layout_marginStart="-34dp"
                        android:layout_marginTop="-282dp"
                        android:layout_width="296dp"
                        android:layout_height="128dp" />

                    <EditText
                        android:id="@+id/passwordET"
                        android:background="@drawable/rectangle_2_shape"
                        android:alpha="0.44999998807907"
                        android:layout_marginTop="71dp"
                        android:layout_width="296dp"
                        android:hint="@string/password_string"
                        android:textColor="@color/black"
                        android:paddingStart="15dp"
                        android:layout_height="55dp" />

                    <EditText
                        android:id="@+id/usernameET"
                        android:background="@drawable/rectangle_3_shape"
                        android:alpha="0.44999998807907"
                        android:layout_width="296dp"
                        android:hint="@string/login_ek3_string"
                        android:textColor="@color/black"
                        android:paddingStart="15dp"
                        android:layout_height="55dp" />


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
